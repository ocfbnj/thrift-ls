{
    "name": "Thrift",
    "scopeName": "source.thrift",
    "patterns": [
        {
            "name": "comment.line.double-slash.thrift",
            "match": "//.*$"
        },
        {
            "name": "comment.block.thrift",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "keyword.control.thrift",
            "match": "\\b(include|namespace|struct|union|enum|exception|service|const|typedef|void|bool|byte|i16|i32|i64|double|string|binary|list|map|set|required|optional|oneway|throws|extends|implements|async|throws)\\b"
        },
        {
            "name": "constant.numeric.thrift",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "constant.language.thrift",
            "match": "\\b(true|false)\\b"
        },
        {
            "name": "string.quoted.double.thrift",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.thrift",
                    "match": "\\\\."
                }
            ]
        },
        {
            "name": "string.quoted.single.thrift",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape.thrift",
                    "match": "\\\\."
                }
            ]
        }
    ]
}
